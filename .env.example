# Lust Rentals Tax Reporting - Environment Configuration
# Copy this file to .env for local development

# =============================================================================
# DATA DIRECTORY
# =============================================================================
# Directory containing raw/, processed/, reports/, and overrides/ subdirectories
# For local development, use relative path (defaults to ./data)
LUST_DATA_DIR=./data

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LUST_LOG_LEVEL=INFO

# =============================================================================
# BACKUP CONFIGURATION (for production)
# =============================================================================
# Enable automated backups
BACKUP_ENABLED=false

# Number of days to retain backups (default: 90)
BACKUP_RETENTION_DAYS=90

# Cloud backup destination (optional)
# AWS S3: s3://bucket-name/path
# Google Cloud Storage: gs://bucket-name/path
# Azure Blob: azure://container-name/path
# BACKUP_DESTINATION=

# Cloud credentials (if using cloud backup)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=

# =============================================================================
# SECURITY (for production)
# =============================================================================
# Secret key for session management and JWT tokens
# Generate with: openssl rand -hex 32
# API_SECRET_KEY=

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Enable authentication (default: false for development)
# AUTH_ENABLED=false

# =============================================================================
# MONITORING (optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=

# Enable Prometheus metrics endpoint
# PROMETHEUS_ENABLED=false
