# Lust Rentals Tax Reporting - Production Environment Configuration
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!

# =============================================================================
# DATA DIRECTORY
# =============================================================================
# Use absolute path in production, should point to persistent volume
LUST_DATA_DIR=/app/data

# =============================================================================
# LOGGING
# =============================================================================
# Use INFO or WARNING in production (avoid DEBUG for performance)
LUST_LOG_LEVEL=INFO

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# IMPORTANT: Enable backups in production!
BACKUP_ENABLED=true

# Retention period (recommended: 90 days or more for tax records)
BACKUP_RETENTION_DAYS=90

# Cloud backup destination (HIGHLY RECOMMENDED)
# Choose one based on your cloud provider:
# BACKUP_DESTINATION=s3://your-backup-bucket/lust-rentals
# BACKUP_DESTINATION=gs://your-backup-bucket/lust-rentals
# BACKUP_DESTINATION=azure://your-container/lust-rentals

# AWS Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_DEFAULT_REGION=us-east-1

# Google Cloud Configuration (if using GCS)
# GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-credentials.json

# Azure Configuration (if using Azure Blob)
# AZURE_STORAGE_ACCOUNT=yourstorageaccount
# AZURE_STORAGE_KEY=your_storage_key

# =============================================================================
# SECURITY (REQUIRED FOR PRODUCTION)
# =============================================================================
# CRITICAL: Generate a strong secret key
# Run: openssl rand -hex 32
# Replace the value below with your own!
API_SECRET_KEY=CHANGEME_GENERATE_A_SECURE_RANDOM_KEY_HERE

# Allowed origins for CORS (your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Enable authentication (set to true for production)
AUTH_ENABLED=true

# Admin credentials (for initial setup)
# These should be changed immediately after first login
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=CHANGEME_GENERATE_SECURE_PASSWORD

# JWT token expiration (in minutes)
# JWT_EXPIRATION_MINUTES=480

# =============================================================================
# DATABASE
# =============================================================================
# Connection pool settings (if migrating to PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:5432/lust_rentals
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=10

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry for error tracking (recommended for production)
# Sign up at https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Enable Prometheus metrics endpoint at /metrics
PROMETHEUS_ENABLED=true

# =============================================================================
# EMAIL NOTIFICATIONS (optional)
# =============================================================================
# Email settings for alerts and notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# Alert recipients (comma-separated)
# ALERT_EMAILS=admin@yourdomain.com,finance@yourdomain.com

# =============================================================================
# PERFORMANCE
# =============================================================================
# Number of worker processes (default: CPU count)
# WORKERS=4

# Maximum concurrent requests
# MAX_REQUESTS=1000

# Request timeout (seconds)
# REQUEST_TIMEOUT=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in production
ENABLE_BULK_OPERATIONS=true
ENABLE_CSV_IMPORT=true
ENABLE_MULTI_YEAR_REPORTS=true
ENABLE_AUDIT_LOG=true

# =============================================================================
# COMPLIANCE
# =============================================================================
# Data retention policy (days)
# Tax records should be kept for 7+ years (2555 days)
DATA_RETENTION_DAYS=2555

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# =============================================================================
# DEVELOPMENT/DEBUG (DO NOT ENABLE IN PRODUCTION)
# =============================================================================
# Set to false in production
DEBUG=false
RELOAD=false
